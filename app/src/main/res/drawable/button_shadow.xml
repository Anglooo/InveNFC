<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="2dp" android:top="4dp">
                <shape android:shape="oval">
                    <solid android:color="#38565656"/>
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp">
                <shape android:shape="oval">
                    <gradient android:angle="270"
                        android:endColor="#ff4444" android:startColor="#ff4444" />
                    <stroke android:width="1dp" android:color="#ff4444" />
                    <padding android:bottom="10dp" android:left="10dp"
                        android:right="10dp" android:top="10dp" />
                </shape>
            </item>
            <item android:drawable="@mipmap/plus_icon"/>
        </layer-list>
    </item>

</selector>